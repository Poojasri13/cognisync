import SwiftUI

struct ProgressDashboardView: View {
    var body: some View {
        ZStack {
            Color(.systemBrown) // background color
                .ignoresSafeArea()
            
            VStack(spacing: 30) {
                Text("Progress Dashboard")
                    .font(.headline)
                    .foregroundColor(.black)
                    .padding(.top, 20)
                
                VStack(spacing: 30) {
                    ScoreCard(title: "Attention Score")
                    ScoreCard(title: "Memory Score")
                    ScoreCard(title: "Emotional Regulation")
                }
                .padding()
                .frame(maxWidth: 250)
                .background(Color(.systemGray6))
                .cornerRadius(5)
            }
        }
    }
}

struct ScoreCard: View {
    var title: String
    
    var body: some View {
        Text(title)
            .font(.body)
            .foregroundColor(.black)
            .frame(maxWidth: .infinity)
            .padding()
            .background(Color.white)
            .cornerRadius(8)
            .shadow(color: .gray.opacity(0.3), radius: 2, x: 0, y: 1)
    }
}

struct ProgressDashboardView_Previews: PreviewProvider {
    static var previews: some View {
        ProgressDashboardView()
            .previewDevice("iPhone 15 Pro")
    }
}

