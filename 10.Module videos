import SwiftUI

struct ModuleVideoView: View {
    @State private var progress: Double = 0.3
    var body: some View {
        VStack(spacing: 25) {
            
            // Top Navigation Bar
            HStack {
                Button(action: {
                    print("Back tapped")
                }) {
                    Image(systemName: "chevron.left")
                        .font(.title3)
                        .foregroundColor(.black)
                }
                
                VStack(alignment: .leading, spacing: 4) {
                    Text("Focused Attention")
                        .font(.headline)
                        .foregroundColor(.black)
                    Text("Mindfulness Session")
                        .font(.caption)
                        .foregroundColor(.gray)
                }
                Spacer()
            }
            .padding()
            .background(Color(red: 1.0, green: 0.94, blue: 0.94))
            .cornerRadius(16)
            .padding(.horizontal)
            .padding(.top, 10)
            
            Spacer()
            
            // Illustration
            Image(systemName: "leaf")
                .resizable()
                .scaledToFit()
                .frame(width: 100, height: 100)
                .foregroundColor(Color(red: 0.53, green: 0.73, blue: 0.71))
                .padding(.top, 10)
            
            // Playback Controls
            VStack(spacing: 15) {
                HStack(spacing: 40) {
                    Button(action: { print("Previous") }) {
                        Image(systemName: "backward.fill")
                            .font(.title2)
                            .foregroundColor(.black)
                    }
                    Button(action: { print("Play / Pause") }) {
                        Image(systemName: "playpause.fill")
                            .font(.title2)
                            .foregroundColor(.black)
                    }
                    Button(action: { print("Next") }) {
                        Image(systemName: "forward.fill")
                            .font(.title2)
                            .foregroundColor(.black)
                    }
                }
                
                // Progress bar
                Slider(value: $progress)
                    .accentColor(Color(red: 0.34, green: 0.56, blue: 1.0))
                    .padding(.horizontal, 40)
            }
            
            Spacer()
            
            // About Section
            VStack(alignment: .leading, spacing: 8) {
                Text("About This Session")
                    .font(.headline)
                    .foregroundColor(.black)
                
                Text("""
                Learn to direct and sustain your attention
                • Duration: ~12 minutes
                • Focus: Attention training
                • Level: Beginner friendly
                """)
                .font(.subheadline)
                .foregroundColor(.black)
            }
            .padding(.horizontal)
            
            Spacer()
            
            // Start Assessment Button
            Button(action: {
                print("Start Assessment tapped")
            }) {
                Text("Start Assessment")
                    .font(.headline)
                    .foregroundColor(.white)
                    .frame(maxWidth: .infinity)
                    .padding()
                    .background(Color(red: 0.35, green: 0.33, blue: 1.0))
                    .cornerRadius(14)
                    .padding(.horizontal, 40)
            }
            .padding(.bottom, 30)
        }
        .background(Color.white)
        .ignoresSafeArea(edges: .bottom)
    }
}

