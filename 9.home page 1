import SwiftUI
import Charts // optional if you use chart view (iOS 16+)

struct HomePage1View: View {
    var body: some View {
        ScrollView {
            VStack(alignment: .leading, spacing: 20) {

                // Top Bar
                HStack {
                    Text("Hi, Martha")
                        .font(.title2)
                        .fontWeight(.semibold)
                    Spacer()
                    Image(systemName: "line.3.horizontal")
                        .font(.title2)
                }
                .padding(.horizontal)

                // Mindfulness Modules Section
                VStack(alignment: .leading, spacing: 15) {
                    Text("Mindfulness Modules")
                        .font(.headline)
                        .padding(.horizontal)

                    // Module cards grid
                    LazyVGrid(columns: [GridItem(.flexible()), GridItem(.flexible())], spacing: 15) {
                        
                        // Card 1
                        ModuleCard(
                            title: "Focused Attention",
                            time: "10 mins",
                            color: Color(red: 0.87, green: 0.93, blue: 0.91),
                            imageName: "leaf"
                        )
                        
                        // Card 2
                        ModuleCard(
                            title: "Working memory",
                            time: "12 mins",
                            color: Color(red: 1.0, green: 0.94, blue: 0.88),
                            imageName: "lightbulb"
                        )
                        
                        // Card 3
                        ModuleCard(
                            title: "Present Moment Awareness",
                            time: "8 mins",
                            color: Color(red: 0.91, green: 0.93, blue: 1.0),
                            imageName: "person.sitting"
                        )
                        
                        // Card 4
                        ModuleCard(
                            title: "Emotional Regulation",
                            time: "9 mins",
                            color: Color(red: 1.0, green: 0.96, blue: 0.82),
                            imageName: "figure.mind.and.body"
                        )
                        
                        // Card 5
                        ModuleCard(
                            title: "Cognitive Integration",
                            time: "6 mins",
                            color: Color(red: 0.94, green: 0.89, blue: 1.0),
                            imageName: "brain"
                        )
                    }
                    .padding(.horizontal)
                }

                // Progress Dashboard Section
                VStack(alignment: .leading, spacing: 15) {
                    Text("Progress Dashboard")
                        .font(.headline)
                        .padding(.horizontal)

                    Text("Track your mindfulness journey")
                        .font(.subheadline)
                        .foregroundColor(.gray)
                        .padding(.horizontal)

                    // Dashboard cards
                    HStack(spacing: 15) {
                        ProgressCard(title: "Attention Score", value: "5.7", color: Color(red: 0.79, green: 0.87, blue: 1.0))
