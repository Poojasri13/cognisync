                    .padding(.horizontal)

                    HStack(spacing: 15) {
                        ProgressCard(title: "Memory Score", value: "4.5", color: Color(red: 0.87, green: 0.94, blue: 0.91))
                    }
                    .padding(.horizontal)

                    // Simple chart using Swift Charts (optional)
                    ChartView()
                        .frame(height: 150)
                        .padding(.horizontal)
                        .background(Color.white)
                        .cornerRadius(16)
                        .shadow(radius: 1)
                        .padding(.horizontal)
                }

                Spacer(minLength: 30)
